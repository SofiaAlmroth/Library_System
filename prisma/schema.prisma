generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid())
  name     String
  email    String @unique
  password String
}

model Category {
  id           String        @id @default(cuid())
  name         String        @unique
  LibraryItems LibraryItem[]
}

model LibraryItem {
  id             String    @id @default(cuid())
  title          String
  type           BookType
  category       Category  @relation(fields: [categoryId], references: [id])
  isBorrowable   Boolean   @default(true)
  borrower       String?
  borrowDate     DateTime? @default(now())
  categoryId     String
  author         String?
  nbrPages       Int?
  runTimeMinutes Int?
}

enum BookType {
  DVD
  NOVEL
  AUDIOBOOK
  ENCYCLOPEDIA
}
